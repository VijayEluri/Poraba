<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">

	<TextView android:id="@+id/StanjeTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:shadowDx="1" android:shadowDy="1" android:textColor="#260101" android:shadowColor="#868686" android:shadowRadius="2" android:layout_marginTop="10dp" android:layout_marginLeft="10dp" android:text="Stanje na računu:"/>
	<TextView android:id="@+id/StanjeVrednost" android:text="0,00 EUR" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#4c1212" android:textSize="18dp" android:textStyle="bold" android:layout_marginLeft="10dp" android:layout_marginTop="2dp"/>

	<TextView android:id="@+id/AirTimeTitle" android:text="Storitve omogočene do:" android:layout_width="wrap_content" android:layout_height="wrap_content" android:shadowDx="1" android:shadowDy="1" android:textColor="#260101" android:shadowColor="#868686" android:shadowRadius="2" android:layout_marginTop="10dp" android:layout_marginLeft="10dp"/>
	<TextView android:id="@+id/AirTimeVrednost" android:text="1.1.1970" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#4c1212" android:textSize="18dp" android:textStyle="bold" android:layout_marginTop="2dp" android:layout_marginLeft="10dp"/>

	<TextView android:id="@+id/DiscTitle" android:text="Datum izklopa:" android:layout_width="wrap_content" android:layout_height="wrap_content" android:shadowDx="1" android:shadowDy="1" android:textColor="#260101" android:shadowColor="#868686" android:shadowRadius="2" android:layout_marginTop="10dp" android:layout_marginLeft="10dp"/>
	<TextView android:id="@+id/DiscVrednost" android:text="1.1.1970" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#4c1212" android:textSize="18dp" android:textStyle="bold" android:layout_marginTop="2dp" android:layout_marginLeft="10dp"/>

</LinearLayout>
