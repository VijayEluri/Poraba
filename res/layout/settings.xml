<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/oldpaper">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:shadowColor="#868686"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="Telefonska št.:"
        android:textColor="#260101"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/telStSettings"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/vnos"
        android:hint="telefonska številka"
        android:inputType="phone"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="85dp"
        android:shadowColor="#868686"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="Planet geslo:"
        android:textColor="#260101"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/gesloSettings"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/vnos"
        android:hint="geslo"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true" />

    <CheckBox
        android:id="@+id/mnamiznikMobile"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="130dp"
        android:button="@drawable/check"
        android:text="M:Namiznik"
        android:textColor="#4c1212" />

    <Button
        android:id="@+id/shraniButtonSettings"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/gumb"
        android:text="Shrani" />

    <TextView
        android:id="@+id/settingsZakupljene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:shadowColor="#868686"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="Prikazane količine:"
        android:textColor="#260101"
        android:textSize="16sp" />

    <ScrollView
        android:id="@+id/scrllvwNo1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="210dp" >

        <LinearLayout
            android:id="@+id/QuotasSettingsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" />
    </ScrollView>

</RelativeLayout>